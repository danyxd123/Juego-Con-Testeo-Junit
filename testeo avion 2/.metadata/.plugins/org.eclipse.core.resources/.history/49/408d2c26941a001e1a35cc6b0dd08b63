package states;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

class StateTest {
    private State state;

    @BeforeEach
    void setUp() {
        state = new ConcreteState();
    }

    @Test
    void testUpdate() {
        state.update(0.1f);
        assertTrue(state.isUpdateCalled());
    }

    @Test
    void testDraw() {
        FakeGraphics graphics = new FakeGraphics();
        state.draw(graphics);
        assertTrue(state.isDrawCalled());
    }

    // Clase ficticia para simular la clase Graphics
    private static class FakeGraphics extends Graphics {}

    // Clase concreta que extiende State para probar las implementaciones de los m√©todos abstractos
    private static class ConcreteState extends State {
        @Override
        public void update(float dt) {
            updateCalled = true;
        }

        @Override
        public void draw(Graphics g) {
            drawCalled = true;
        }
    }
}
